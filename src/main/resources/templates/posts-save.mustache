{{>layout/header}}
<h1>게시글 등록</h1>

<div id="save-wrapper">
    <div class="col-md-4">
        <form>
            <div>
                <input type="text"  id="title" placeholder="제목을 입력하세요.">
            </div>
            <div>
                <select id="kategorie">
                    <option value="" selected>--카테고리--</option>
                    <option value="Trend">Trend</option>
                    <option value="BackEnd">BackEnd</option>
                    <option value="DataBase">DataBase</option>
                </select>
            </div>
            <div>
                <input type="text"  id="author" placeholder="작성자를 입력하세요.">
            </div>
            <div>
                <label for="content">내용</label>
                <div id="toolbar-container"></div>
                <div type="text"  id="content" placeholder="내용을 입력하세요." style="height:500px;"></div>
            </div>
        </form>
        <div class="action_btn">
            <button type="button" id="btn-save">등록</button>
            <button type="button" id="btn-save"><a href="/" role="button">취소</a></button>
        </div>
    </div>
</div>
{{>layout/footer}}